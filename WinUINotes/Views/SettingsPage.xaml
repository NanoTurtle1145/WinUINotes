<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinUINotes.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUINotes.Views"
    xmlns:constants="using:WinUINotes"
    xmlns:models="using:WinUINotes.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <StackPanel Spacing="24" MaxWidth="600">
            <TextBlock Text="设置" Style="{ThemeResource TitleTextBlockStyle}"/>

            <StackPanel Spacing="12">
                <TextBlock Text="应用设置" Style="{ThemeResource SubtitleTextBlockStyle}"/>

                <ToggleSwitch Header="深色模式" OffContent="关闭" OnContent="开启"
                             IsOn="{x:Bind models:AppSettings.Instance.IsDarkMode, Mode=TwoWay}"/>

                <ToggleSwitch Header="自动保存" OffContent="关闭" OnContent="开启"
                             IsOn="{x:Bind models:AppSettings.Instance.AutoSave, Mode=TwoWay}"/>

                <NumberBox Header="自动保存间隔（秒）" 
                          Value="{x:Bind models:AppSettings.Instance.AutoSaveInterval, Mode=TwoWay}"
                          Minimum="5" Maximum="300"/>

                <ToggleSwitch Header="Markdown预览" OffContent="关闭" OnContent="开启"
                             IsOn="{x:Bind models:AppSettings.Instance.EnableMarkdownPreview, Mode=TwoWay}"/>
            </StackPanel>

            <StackPanel Spacing="12">
                <TextBlock Text="关于" Style="{ThemeResource SubtitleTextBlockStyle}"/>

                <TextBlock Text="{x:Bind constants:Constants.AppName}" Style="{ThemeResource SubtitleTextBlockStyle}" FontSize="14"/>
                <TextBlock x:Name="VersionTextBlock" Style="{ThemeResource BodyTextBlockStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
