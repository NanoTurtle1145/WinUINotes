<ContentDialog
    x:Class="WinUINotes.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUINotes"
    xmlns:constants="using:WinUINotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{x:Bind constants:Constants.AboutDialogTitle}"
    PrimaryButtonText="å¥½"
    CornerRadius="8">

	<ScrollViewer MaxHeight="400">
		<StackPanel Spacing="12">
			<TextBlock Text="{x:Bind constants:Constants.AppName}" 
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       TextAlignment="Center"/>
			<TextBlock x:Name="VersionTextBlock" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       TextAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="{x:Bind constants:Constants.Developer}" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       TextAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
				<StackPanel Spacing="8">
					<TextBlock Text="{x:Bind constants:Constants.FeaturesTitle}" 
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
					<TextBlock Text="{x:Bind constants:Constants.Feature1}" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"/>
					<TextBlock Text="{x:Bind constants:Constants.Feature2}" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"/>
					<TextBlock Text="{x:Bind constants:Constants.Feature3}" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"/>
					<TextBlock Text="{x:Bind constants:Constants.Feature4}" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"/>
					<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
						<StackPanel Spacing="8">
							<TextBlock Text="{x:Bind constants:Constants.NewFeaturesTitle}" 
                                       Style="{StaticResource BodyStrongTextBlockStyle}"/>
							<TextBlock Text="{x:Bind constants:Constants.NewFeature1}" 
                                       Style="{StaticResource BodyTextBlockStyle}"
                                       TextWrapping="Wrap"/>

						</StackPanel>

					</Border>
				</StackPanel>
			
			</Border>
			<TextBlock Text="{x:Bind constants:Constants.Website}" 
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
			<TextBlock Text="{x:Bind constants:Constants.PoemTitle}" 
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
			<TextBlock Text="{x:Bind constants:Constants.PoemAuthor}" 
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
			<TextBlock Text="{x:Bind constants:Constants.PoemLine1}" 
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
			<TextBlock Text="{x:Bind constants:Constants.PoemLine2}" 
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
			<TextBlock Text="{x:Bind constants:Constants.PoemLine3}" 
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
			<TextBlock Text="{x:Bind constants:Constants.PoemLine4}" 
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
		</StackPanel>
	</ScrollViewer>
</ContentDialog>
