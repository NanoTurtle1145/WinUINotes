<ContentDialog
    x:Class="WinUINotes.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUINotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="关于WinUI笔记"
    PrimaryButtonText="好"
    CornerRadius="8">

	<ScrollViewer MaxHeight="400">
		<StackPanel Spacing="12">
			<TextBlock Text="WinUI笔记" 
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       TextAlignment="Center"/>
			<TextBlock x:ConnectionId='2' x:Name="VersionTextBlock" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       TextAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="开发者：NanoTurtle" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       TextAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
			<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
				<StackPanel Spacing="8">
					<TextBlock Text="功能" 
                               Style="{StaticResource BodyStrongTextBlockStyle}"/>
					<TextBlock Text="• 创建和管理笔记" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"/>
					<TextBlock Text="• 卡片式界面" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"/>
					<TextBlock Text="• 本地数据存储" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"/>
					<!--TextBlock Text="• 支持Markdonw预览" 
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"/-->
					<Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16">
						<StackPanel Spacing="8">
							<TextBlock Text="新功能" 
                        Style="{StaticResource BodyStrongTextBlockStyle}"/>
							<TextBlock Text="• 支持Markdown预览" 
                                       Style="{StaticResource BodyTextBlockStyle}"
                           TextWrapping="Wrap"/>

						</StackPanel>

					</Border>
				</StackPanel>
			
			</Border>
			<TextBlock Text="www.hopestudio.top" 
                    Style="{StaticResource BodyTextBlockStyle}"
                    TextAlignment="Center"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
		</StackPanel>
	</ScrollViewer>
</ContentDialog>

